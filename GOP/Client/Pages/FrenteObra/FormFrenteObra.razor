
<EditForm Model="@frenteObra" OnValidSubmit="@OnValidSubmit">
    <div class="form-field mt-2 mb-2">
        <div class="form-group row p-2">
            <label class="col-form-label">Codigo</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="frenteObra.CodFrenteObra" placeholder="Codigo del Frente Obra" class="form-control" />
                </div>
                <ValidationMessage For="@(() => frenteObra.CodFrenteObra)" />
            </div>
        </div>

        <div class="form-group row p-2">
            <label class="col-form-label">Nombre</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="frenteObra.NombreFrenteObra" placeholder="Nombre del Frente Obra" class="form-control" />
                </div>
                <ValidationMessage For="@(() => frenteObra.NombreFrenteObra)" />
            </div>
        </div>

        <div class="form-group row p-2" hidden>
            <label class="col-form-label">Zona</label>
            <div class="col">
                <div class="input-group">
                    <InputNumber @bind-Value="frenteObra.ZonaId" class="form-control" />
                </div>
                <ValidationMessage For="@(() => frenteObra.ZonaId)" />
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-block btn-success">
            <i class="oi oi-check "></i>
            <text style="color:white"> @TextBotonSubmit</text>
        </button>
    </div>
    <DataAnnotationsValidator />
</EditForm>

@code {
    [Parameter] public FrenteObraDTO frenteObra { get; set; } = new FrenteObraDTO();
    [Parameter] public string TextBotonSubmit { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}