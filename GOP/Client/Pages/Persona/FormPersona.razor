@inject PersonaService Service

<EditForm Model="@persona" OnValidSubmit="@OnValidSubmit">
    <div class="form-field mt-2 mb-2">
        <div class="form-group row p-2">
            <label class="col-form-label">DNI</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="@persona.DNI" placeholder="DNI de la Persona" class="form-control" />
                </div>
                <ValidationMessage For="@(() => persona.DNI)" />
            </div>
        </div>

        <div class="form-group row p-2">
            <label class="col-form-label">Nombre</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="@persona.Nombre" placeholder="Nombre de la Persona" class="form-control" />
                </div>
                <ValidationMessage For="@(() => persona.Nombre)" />
            </div>
        </div>

        <div class="form-group row p-2">
            <label class="col-form-label">Apellido</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="@persona.Apellido" placeholder="Apellido de la Persona" class="form-control" />
                </div>
                <ValidationMessage For="@(() => persona.Apellido)" />
            </div>
        </div>

         <div class="form-group row p-2">
            <label class="col-form-label">Email</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="@persona.Email" placeholder="Email de la Persona" class="form-control" />
                </div>
                <ValidationMessage For="@(() => persona.Email)" />
            </div>
        </div>

         <div class="form-group row p-2">
            <label class="col-form-label">Telefono</label>
            <div class="col">
                <div class="input-group">
                    <InputText @bind-Value="@persona.Telefono" placeholder="Telefono de la Persona" class="form-control" />
                </div>
                <ValidationMessage For="@(() => persona.Telefono)" />
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-block btn-success">
            <i class="oi oi-check "></i>
            <text style="color:white"> @TextBotonSubmit</text>
        </button>
    </div>
    <DataAnnotationsValidator />
</EditForm>

@code {
    [Parameter] public PersonaDTO persona { get; set; } = new PersonaDTO();
    [Parameter] public string TextBotonSubmit { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}